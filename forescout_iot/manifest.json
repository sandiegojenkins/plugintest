{
    "name": "Forescout",
    "id": "forescout",
    "version": "1.0.0",
    "description": "This plugin fetches host information from Forescout and ingests it into Netskope Cloud Exchange as IoT Assets.",
    "module": "IoT",
    "mapping": "",
    "pull_supported": true,
    "push_supported": false,
    "configuration": [
        {
            "label": "Base URL",
            "key": "base_url",
            "type": "text",
            "mandatory": true,
            "default": "",
            "description": "Base URL of Forescout instance. e.g. https://forescout.example.com"
        },
        {
            "label": "API Token",
            "key": "api_token",
            "type": "password",
            "mandatory": false,
            "default": "",
            "description": "API Token for Forescout authentication."
        },
        {
            "label": "SSL Validation",
            "key": "ssl_validation",
            "type": "choice",
            "choices": [
                {
                    "key": "Enabled",
                    "value": "true"
                },
                {
                    "key": "Disabled",
                    "value": "false"
                }
            ],
            "default": "true",
            "mandatory": true,
            "description": "Enable or disable SSL certificate validation."
        }
    ]

}
